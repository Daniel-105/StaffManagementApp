@using StaffManagementApp.ViewModel;
@model UpdateUserVM

<div class="container">
    <h1>Update User</h1>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Staff.Id" hidden />
        <input asp-for="Staff.ImageURL" hidden />
        <input asp-for="Staff.TeamId" hidden />

        <div class="form-group">
            <label asp-for="Staff.Name">Name</label>
            <input asp-for="Staff.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Staff.Birthday">Birthday</label>
            <input asp-for="Staff.Birthday" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Staff.Hobbies">Hobbies</label>
            <input asp-for="Staff.Hobbies" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Staff.Email">Email</label>
            <input asp-for="Staff.Email" class="form-control" />
        </div>

        <div class="form-floating py-2 col-12">
            <select asp-for="SelectedTeamId" asp-items="@Model.TeamsListList" class="form-select border-0 shadow">
                <option>--Select Category--</option>
            </select>
            <label asp-for="SelectedTeamId" class="ms-2"></label>
            <span asp-validation-for="SelectedTeamId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Staff.ImageURL" class="ms-2">Profile Image</label>
            <input asp-for="Staff.ImageURL" name="file" type="file" class="form-control border-0 shadow" />
        </div>

        <button type="submit" class="btn btn-primary my-3">Update</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to User List</a>
    </form>
</div>