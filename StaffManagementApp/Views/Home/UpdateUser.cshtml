@model Staff

<div class="card-body p-4">

    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <input asp-for="ImageURL" hidden />

        <div class="row">
            <div class="col-10">
                <div class="border p-3 mt-4">
                    <div asp-validation-summary="All"></div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Name" class="ms-2"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Birthday" type="Date" class="form-control border-0 shadow">                         
                        <label asp-for="Birthday" class="ms-2"></label>
                        <span asp-validation-for="Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Hobbies" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Hobbies" class="ms-2"></label>
                        <span asp-validation-for="Hobbies" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Email" type="text" class="form-control border-0 shadow" />
                        <label asp-for="Email" class="ms-2"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="Team" class="form-select border-0 shadow">
                            <option>--Select Category--</option>
                        </select>
                        <label asp-for="Team" class="ms-2"></label>
                        <span asp-validation-for="Team" class="text-danger"></span>
                    </div>

                    <div class="form-floating py-2 col-12">
                        <input type="file" name="file" class="form-control border-0 shadow" asp-for="ImageURL" />
                        <label asp-for="ImageURL" class="ms-2"></label>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary border form-control  ">
                                Back to Book List
                            </a>
                        </div>
                    </div>
                </div>


            </div>

@*            <div class="col-2">
                <img src="@Model.Product.ImageURL" width="100%" />
            </div>
*@
        </div>
    </form>
</div>